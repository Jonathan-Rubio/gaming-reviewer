<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <title>Gaming Journal</title>
    <style>
        .btn-check:checked + .btn-outline-danger {
        background-color: #dc3545;
        color: white;
        }

        .btn-check:checked + .btn-outline-warning {
        background-color: #ffc107;
        color: black;
        }

        .btn-check:checked + .btn-outline-success {
        background-color: #198754;
        color: white;
        }
    </style>

</head>
<body>

    <!--NAVBAR-->
    <div class="bg-dark text-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow">
            <div class="container">
                <a class="navbar-brand fw-bold">Scorely</a>
            
                <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarContent"
                aria-controls="navbarContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-reviews">Reviews</a>
                </li>
                </ul>
            </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <div class="container d-flex flex-column justify-content-center align-items-center text-center" style="height: 85vh;">

            <h1 class="display-3 fw-bold mb-3">
            Discover. Review. Rank.
            </h1>

            <p class="lead mb-4 text-secondary">
            Search for official games and share your thoughts.
            </p>

            <!-- Search Form -->
            <form action="/search" method="POST" class="w-75 w-md-50">
            <div class="input-group input-group-lg shadow">
                <input 
                type="text" 
                name="game" 
                class="form-control"
                placeholder="Search for a game..."
                required
                >
                <button class="btn btn-primary px-4" type="submit">
                Search
                </button>
            </div>
            </form>

        </div>
    </div>
    
    <div class="container mt-4">
        <% if (locals.games && games.length > 0) { %>
            <% games.forEach((game) => { %>
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h3 class="mb-3"><%= game.game_name %></h3>
                        <% game.reviews.forEach((review) => { %>
                        <div class="border rounded p-3 mb-3 bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>Score: <%= review.score %>/10</strong>
                                <small class="text-muted">
                                    <%= new Date(review.created_at).toLocaleDateString() %>
                                </small>
                            </div>
                            <p class="mt-2"><%= review.review_text %></p>
                            <div class="d-flex gap-2">

                                <!-- EDIT -->
                                <form action="/edit-review" method="POST">
                                    <input type="hidden" name="reviewId" value="<%= review.id %>">
                                    <button class="btn btn-sm btn-warning">
                                    Edit
                                    </button>
                                </form>

                                <!-- DELETE -->
                                <form action="/delete-review" method="POST">
                                    <input type="hidden" name="reviewId" value="<%= review.id %>">
                                    <button class="btn btn-sm btn-danger">
                                    Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        <% } %>
        
        <% if (locals.selectedGame) { %>
            <div class="container mt-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h2><%= selectedGame.name %></h2>

                        <% if (selectedGame.imageUrl) { %>
                            <img
                                src="<%= selectedGame.imageUrl %>"
                                class="img-fluid rounded mb-3"
                                style="max-width: 300px;">
                        <% } %>
                    </div>
                </div>

                <!-- REVIEW FORM -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3">Write your review</h4>
                    
                        <form action="/review" method="POST">
                            <input type="hidden" name="gameId" value="<%= selectedGame.id %>">
                            <input type="hidden" name="gameName" value="<%= selectedGame.name %>">

                            <!-- REVIEW TEXT -->
                            <div class="mb-3">
                                <label class="form-label">Your review</label>
                                <textarea
                                name="reviewText"
                                class="form-control"
                                rows="4"
                                required
                                ></textarea>
                            </div>

                            <!-- SCORE DROPDOWN -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Your Rating</label>
                                
                                <div class="d-flex flex-wrap gap-2">

                                    <% for(let i = 1; i <= 10; i++) { 
                                        let colorClass = "";

                                        if(i <= 4) {
                                        colorClass = "btn-outline-danger";
                                        } else if(i <= 7) {
                                        colorClass = "btn-outline-warning";
                                        } else {
                                        colorClass = "btn-outline-success";
                                        }
                                    %>

                                    <input type="radio"
                                            class="btn-check"
                                            name="score"
                                            id="score<%= i %>"
                                            value="<%= i %>"
                                            required>

                                    <label class="btn <%= colorClass %> rounded-pill px-3"
                                            for="score<%= i %>">
                                        <%= i %>
                                    </label>

                                    <% } %>

                                </div>
                            </div>



                            <div class="d-flex justify-content-between">
                                <a href="/" class="btn btn-outline-secondary">
                                    ‚Üê Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Save Review
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>

        <!--RESULTS FROM SEARCH POST-->
        <% if (locals.searchedGame) { %>
            <div class="row">
                <% searchedGame.forEach((game) => { %>
                <% const gameImageId = game.cover?.image_id; %>

                    <div class="col-6 col-md-3 mb-4 text-center">

                        <!-- SELECT FORM POST -->
                        <form action="/select" method="POST">
                            <input type="hidden" name="gameId" value="<%= game.id %>">
                            <input type="hidden" name="gameName" value="<%= game.name %>">
                            <input type="hidden" name="imageId" value="<%= gameImageId %>">

                            <button type="submit" class="btn p-0 border-0 bg-transparent">
                                <% if (gameImageId) { %>
                                    <img src="https://images.igdb.com/igdb/image/upload/t_cover_small_2x/<%= gameImageId %>.jpg"
                                        class="img-fluid rounded shadow-sm"
                                        alt="<%= game.name %>">
                                <% } else { %>
                                    <div class="text-muted">No image</div>
                                <% } %>
                            </button>
                        </form>

                        <h6 class="mt-2"><%= game.name %></h6>

                    </div>
                <% }); %>
            </div>
        <% } %>

        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>