<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <title>Gaming Journal</title>
</head>
<body class="container mt-4">

    <!--SEARCH FORM POST-->
    <form action="/search" method="POST" class="mb-4">
        <div class="input-group">
            <input type="text" name="game" action="/search" method="post" class="form-control" placeholder="Search game..." aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>

<% if (locals.reviews && reviews.length > 0) { %>

  <% reviews.forEach((review) => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5>Score: <%= review.score %>/10</h5>
        <p><%= review.review_text %></p>
      </div>
    </div>
  <% }) %>

<% } else { %>
  <p>No reviews yet.</p>
<% } %>
    
    <% if (locals.selectedGame) { %>
        <div class="container mt-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2><%= selectedGame.name %></h2>

                    <% if (selectedGame.imageUrl) { %>
                        <img
                            src="<%= selectedGame.imageUrl %>"
                            class="img-fluid rounded mb-3"
                            style="max-width: 300px;">
                    <% } %>
                </div>
            </div>

            <!-- REVIEW FORM -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-3">Write your review</h4>
                  
                    <form action="/review" method="POST">
                        <input type="hidden" name="gameId" value="<%= selectedGame.id %>">
                        <input type="hidden" name="gameName" value="<%= selectedGame.name %>">

                        <!-- REVIEW TEXT -->
                        <div class="mb-3">
                            <label class="form-label">Your review</label>
                            <textarea
                            name="reviewText"
                            class="form-control"
                            rows="4"
                            required
                            ></textarea>
                        </div>

                        <!-- SCORE DROPDOWN -->
                        <div class="mb-3">
                            <label class="form-label">Score</label>
                            <select name="score" class="form-select" required>
                                <option value="">Select a score</option>
                                <% for (let i = 1; i <= 10; i++) { %>
                                    <option value="<%= i %>"><%= i %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/" class="btn btn-outline-secondary">
                                ‚Üê Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Save Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% } %>

    <!--RESULTS FROM SEARCH POST-->
    <% if (locals.searchedGame) { %>
        <div class="row">
            <% searchedGame.forEach((game) => { %>
            <% const gameImageId = game.cover?.image_id; %>

                <div class="col-6 col-md-3 mb-4 text-center">

                    <!-- SELECT FORM POST -->
                    <form action="/select" method="POST">
                        <input type="hidden" name="gameId" value="<%= game.id %>">
                        <input type="hidden" name="gameName" value="<%= game.name %>">
                        <input type="hidden" name="imageId" value="<%= gameImageId %>">

                        <button type="submit" class="btn p-0 border-0 bg-transparent">
                            <% if (gameImageId) { %>
                                <img src="https://images.igdb.com/igdb/image/upload/t_cover_small_2x/<%= gameImageId %>.jpg"
                                    class="img-fluid rounded shadow-sm"
                                    alt="<%= game.name %>">
                            <% } else { %>
                                <div class="text-muted">No image</div>
                            <% } %>
                        </button>
                    </form>

                    <h6 class="mt-2"><%= game.name %></h6>

                </div>
            <% }); %>
        </div>
    <% } %>

    <% if (locals.error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>